<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.gustavoesposar.LoginController">
   <Pane prefHeight="311.0" prefWidth="408.0">
      <children>
            <Button fx:id="btnLogin" layoutX="165.0" layoutY="227.0" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-radius: 15px; -fx-background-color: rgba(63, 152, 170, 1) 60%;" text="Entrar">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
            <PasswordField id="txtSenha" fx:id="txtSenha" layoutX="79.0" layoutY="78.0" promptText="Senha" style="-fx-background-radius: 15px; -fx-border-color: black; -fx-border-radius: 15px;">
                <font>
                    <Font size="20.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="CROSSHAIR" />
                </cursor>
            </PasswordField>
            <TextField id="txtEmail" fx:id="txtEmail" layoutX="80.0" layoutY="164.0" promptText="e-mail" style="-fx-background-radius: 15px;">
                <font>
                    <Font size="20.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="DEFAULT" />
                </cursor>
            </TextField>
      </children>
   </Pane>
</VBox>
